# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
VERSION=latest

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_URI_PROD=mongodb://admin:your-secure-mongo-password@mongodb:27017/eproject_prod?authSource=admin

# Message Broker Configuration
RABBITMQ_USER=eproject_user
RABBITMQ_PASS=your-secure-rabbitmq-password
RABBITMQ_ERLANG_COOKIE=your-secure-erlang-cookie
RABBITMQ_URL_PROD=amqp://eproject_user:your-secure-rabbitmq-password@rabbitmq:5672

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application URLs
PRODUCTION_URL=https://your-production-domain.com
API_BASE_URL=https://your-production-domain.com/api

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=256