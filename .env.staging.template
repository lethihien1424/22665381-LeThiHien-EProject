# Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
VERSION=develop

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=staging-mongo-password
MONGO_URI_STAGING=mongodb://admin:staging-mongo-password@mongodb:27017/eproject_staging?authSource=admin

# Message Broker Configuration
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_URL_STAGING=amqp://guest:guest@rabbitmq:5672

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key

# Application URLs
STAGING_URL=http://staging.your-domain.com
API_BASE_URL=http://staging.your-domain.com/api

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=128